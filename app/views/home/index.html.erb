<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>

<h1>Hello <%= current_user.email %></h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <%= post.title %>: <%= post.body %>
  </li>
  <% end %>
</ul>
